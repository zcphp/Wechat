/**app.wxss**/
/* 字体图标 */
@import "fontIcon/iconfont.wxss";

/* 初始化样式 */
page {
  background: #fafafa;
}
input,label,form,button {
	vertical-align: middle;
}
image {
	display: block;
	width: 100%;
	height: 100%;
}

/**
 * 字体图标
 */
.icon {
	color: #ff5533;
	position: absolute;
}




/* 
 * 公共类
 */
.titleText {
	font-size: 38rpx;
	color: #333;
}
.ddText {
	font-size: 28rpx;
	color: #999;
}
.miniText {
	font-size: 28rpx;
	color: #999;
}
.middleText {
	font-size: 30rpx;
	color: #999;
}
.mt-tab {
  margin-top: 112rpx;
}
.clearfix {
	clear: both;
}
.fl {
	float: left;
}
.fr {
