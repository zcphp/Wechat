.evaluating-item {
	padding-top: 20rpx;
}
.item-hd {
	font-size: 30rpx;
	color: #999;
	padding-left: 40rpx;
	line-height: 60rpx;
}
.item-bd {
	background: #fff;
	padding-left: 40rpx;
}
.item-list {
	display: flex;
	font-size: 30rpx;
	color: #666;
	line-height: 60rpx;
	padding: 16rpx 20rpx 16rpx 0;
	border-bottom: 2rpx solid #dedede;
}
.evaluating-item .item-list:last-child {
	border-bottom: 0;
}
.list-titl {
	flex: 1;
}
.list-con {
	flex: 1;
	color: #999;
	font-size: 28rpx;
	text-align: right;
}
.list-con input {
	/* text-align: left; */
}
.radio {
	padding-left: 40rpx;
	margin-left: 10rpx;
	position: relative;
}
radio {
	display: none;
}
.radio-icon {
	display: inline-block;
	width: 20rpx;
	height: 20rpx;
	border: 2rpx solid #b48b6d;
	border-radius: 50%;
	position: absolute;
	top: 50%;
	margin-top: -10rpx;
	left: 0;
}
.radioSelected {
	background: #b48b6d;
}

.finish-btn {
	/* width: 100%; */
	background: #b48b6d;
	color: #fff;
	border-radius: 6rpx;
	font-size: 30rpx;
	margin: 30rpx;
	padding: 14rpx 0;
	text-align: center;
}



























