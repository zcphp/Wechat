.detail-page {
	padding: 0 30rpx;
}
.detail-item {
	margin-top: 30rpx;
}
.item-hd {
	padding: 14rpx 0;
	font-size: 30rpx;
}
.item-bd {
	padding: 0 38rpx;
	background: #fff;
	border-radius: 8rpx;
}
.information-list {
	display: flex;
	font-size: 30rpx;
	padding: 16rpx 0;
	border-bottom: 2rpx dashed #ddd;
}
.list-title {
	flex: 1;
	color: #999;
}
.list-detail {
	flex: 1;
	text-align: right;
}
.information-list:last-child {
	border: 0;
}

.btn-box {
	width: 100%;
	margin: 0 auto;
	position: fixed;
	bottom: 40rpx;
}
.toProduct {
	margin: 0 30rpx;
	font-size: 32rpx;
	color: #fff;
	background: #b48b6d;
	border-color: #b48b6d;
}










